# LoquiHQ - Environment Variables
# ===================================================
# Copy this file to .env.local for local development
# For production, set these as environment variables in your hosting platform

# =============================================================================
# FRONTEND VARIABLES (Vite - VITE_* prefix required)
# =============================================================================

# Supabase Configuration (REQUIRED)
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Backend API URL
# Development: http://localhost:8080
# Production: https://your-backend-url.com
VITE_API_BASE_URL=http://localhost:8080

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false

# Analytics (Production only)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (Production only)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# BACKEND VARIABLES (server/.env)
# =============================================================================

# Gemini AI API (REQUIRED)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash

# Server Configuration
PORT=8080
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs (Optional - for enhanced monetization data)
# YOUTUBE_API_KEY=
# SPOTIFY_CLIENT_ID=
# SPOTIFY_CLIENT_SECRET=

# Email Configuration (Optional - for exports)
# SendGrid
# SENDGRID_API_KEY=
# FROM_EMAIL=noreply@yourdomain.com

# SMTP Alternative
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=LoquiHQ <noreply@yourdomain.com>

# Security (Production only)
# ENCRYPTION_KEY=your-32-character-encryption-key

# Error Tracking Backend (Production only)
# SENTRY_DSN=

# =============================================================================
# OAUTH CREDENTIALS (Future Feature - Not yet implemented)
# =============================================================================
# LinkedIn
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_REDIRECT_URI=https://yourdomain.com/api/oauth/linkedin/callback

# X (Twitter)
# X_CLIENT_ID=
# X_CLIENT_SECRET=
# Redirect URI is auto-generated: ${API_PUBLIC_URL}/api/integrations/x/callback

# YouTube
# YOUTUBE_CLIENT_ID=
# YOUTUBE_CLIENT_SECRET=
# YOUTUBE_REDIRECT_URI=https://yourdomain.com/api/oauth/youtube/callback

# Medium
# MEDIUM_CLIENT_ID=
# MEDIUM_CLIENT_SECRET=
# MEDIUM_REDIRECT_URI=https://yourdomain.com/api/oauth/medium/callback
