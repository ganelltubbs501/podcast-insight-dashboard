      "Bash(do sed -i 's/text-gray-600/text-textSecondary/g' \"$file\")",
      "Bash(do sed -i 's/text-gray-500/text-textMuted/g' \"$file\")",
      "Bash(do sed -i 's/bg-white /bg-gray-100 /g' \"$file\")",
      "Bash(do sed -i 's/bg-gray-50 /bg-gray-100 /g' \"$file\")",
      "Bash(do sed -i 's/border-gray-200/border-gray-300/g' \"$file\")",
      "Bash(do sed -i 's/hover:bg-gray-50/hover:bg-gray-200/g' \"$file\")",
      "Bash(do sed -i 's/border-gray-100/border-gray-300/g' \"$file\")",
      "Bash(for file in components/*.tsx)",
      "Bash(do sed -i 's/text-gray-900/text-textPrimary/g; s/text-gray-800/text-textBody/g; s/text-gray-700/text-textSecondary/g; s/text-gray-600/text-textSecondary/g; s/text-gray-500/text-textMuted/g; s/bg-white /bg-gray-100 /g; s/bg-gray-50 /bg-gray-100 /g; s/border-gray-200/border-gray-300/g; s/border-gray-100/border-gray-300/g; s/hover:bg-gray-50/hover:bg-gray-200/g' \"$file\")",
      "Bash(for file in pages/*.tsx components/*.tsx)",
      "Bash(do sed -i 's/bg-gray-900 /bg-gray-200 /g; s/hover:bg-gray-800/hover:bg-gray-300/g' \"$file\")",
      "Bash(do sed -i 's/text-gray-400/text-textMuted/g' \"$file\")",
      "Bash(npm run dev:vite:*)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)",
      "Bash(ls:*)",
      "Bash(dir:*)"
