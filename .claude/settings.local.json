      "Bash(git mv:*)",
      "Bash(npm install)",
      "Bash(git restore:*)",
      "Bash(npm run build:*)",
      "Bash(lsof:*)",
      "Bash(netstat:*)",
      "Bash(findstr:*)",
      "Bash(taskkill:*)",
      "Bash(npm start)",
      "Bash(npx tsc:*)",
      "Bash(timeout 10 npm run dev:*)",
      "Bash(timeout:*)",
      "Bash(npm run type-check:*)",
